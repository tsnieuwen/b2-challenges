<%= form_tag "/professors/#{@professor.id}", method: :patch do %>
  <h2>Edit <%= "#{@professor.name}" %></h2>
  <%= label_tag :name %>
  <%= text_field_tag :name, @professor.name %><br>
  <%= label_tag :age %>
  <%= text_field_tag :age, @professor.age %><br>
  <%= label_tag :specialty %>
  <%= text_field_tag :specialty, @professor.specialty %><br>
  <%= submit_tag "submit" %>
<% end %>
